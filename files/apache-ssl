NameVirtualHost *:443

<VirtualHost *:443>
SetEnv MERAN_CONF "/etc/meran/meranmain.conf"
PerlSwitches -wT

DirectoryIndex /meran/mainpage.pl
DocumentRoot /usr/local/share/meran/main/intranet/htdocs

PerlPostConfigRequire /etc/meran/iniciandomain.pl

#Enabling Compression
SetOutputFilter DEFLATE

ServerAdmin koha@info.unlp.edu.ar
ErrorLog /var/log/meran/main/meran-error.log
TransferLog /var/log/meran/main/meran-access.log
LogLevel debug
SSLEngine On
SSLProtocol -all +TLSv1
SSLCipherSuite HIGH:MEDIUM
SSLCertificateFile /etc/apache2/ssl/main/apache.pem

ErrorDocument 500 /meran/informacion/error.pl
ErrorDocument 404 /meran/informacion/404notfound.pl
<Directory /usr/local/share/meran/main/intranet/ >
Order deny,allow
Allow from all
Deny from all
</Directory>

#CON MODPERL

<Perl>
push(@INC,"/usr/local/share/meran/main/intranet/modules");
push(@INC,"/opt/modules/Share/share/perl/5.10.1/");
push(@INC,"/opt/modules/Share/lib/perl/5.10.1/");
push(@INC,"/opt/modules/Share/share/perl/5.10/");
push(@INC,"/opt/modules/Share/share/perl/5.10.1/");
push(@INC,"/opt/modules/Share/lib/perl5/");
</Perl>



Alias /meran/ /usr/local/share/meran/main/intranet/cgi-bin/
<Location /meran/ >
       SetHandler perl-script
              PerlResponseHandler ModPerl::Registry
	             PerlOptions +ParseHeaders
		            Options +ExecCGI
			    </Location>

Alias /includes/ /usr/local/share/meran/main/includes/
<Directory /usr/local/share/meran/main/includes/ >
 Options  -Indexes
   Order allow,deny
     Allow from all
     </Directory>

ServerSignature Off

Alias /uploads/covers-added/ "/usr/local/share/meran/main/files/intranet/uploads/covers-added/"
<Directory /usr/local/share/meran/main/files/intranet/uploads/covers-added/ >
 Order allow,deny
  Allow from all
  </Directory>

Alias /uploads/covers/ "/usr/local/share/meran/main/files/intranet/uploads/covers/"
<Directory /usr/local/share/meran/main/files/intranet/uploads/covers/ >
  Order allow,deny
    Allow from all
    </Directory>

Alias /private-uploads/ "/usr/local/share/meran/main/files/intranet/private-uploads/"
<Directory /usr/local/share/meran/main/files/intranet/private-uploads/ >
Order allow,deny
Allow from all
</Directory>

Alias /uploads/novedades-opac "/usr/local/share/meran/main/files/opac/uploads/novedades/"
<Directory /usr/local/share/meran/main/files/opac/uploads/novedades >
Order allow,deny
Allow from all
</Directory>

Alias /uploads/portada "/usr/local/share/meran/main/files/opac/uploads/portada/"
<Directory /usr/local/share/meran/main/files/opac/uploads/portada >
Order allow,deny
Allow from all
</Directory>

Alias /uploads/ "/usr/local/share/meran/main/files/intranet/uploads/"
<Directory /usr/local/share/meran/main/files/intranet/uploads/ >
Order allow,deny
Allow from all
</Directory>

Alias /cron "/usr/local/share/meran/main/intranet/cgi-bin/cron/"
<Directory /usr/local/share/meran/main/intranet/cgi-bin/cron/ >
 Order deny,allow
  Allow from 127.0.0.1/255.255.255.255
   Deny from all
   </Directory>

Alias /dev-plugins /usr/local/share/meran/dev-plugins/
<Directory /usr/local/share/meran/dev-plugins/>
Options  -Indexes
Order allow,deny
Allow from all
</Directory>

</VirtualHost>